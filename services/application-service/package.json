{
  "name": "application-service",
  "version": "1.0.0",
  "description": "Application Service for JobMatch",
  "main": "dist/main.js",
  "scripts": {
    "dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns='.*\\.integration\\.spec\\.ts$'",
    "test:integration": "pnpm -w --filter @jobmatch/shared build && jest --testPathPatterns='.*\\.integration\\.spec\\.ts$' --runInBand --forceExit",
    "test:watch": "jest --watch",
    "lint": "eslint src/ test/",
    "start": "node dist/main.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.535.0",
    "@aws-sdk/client-sqs": "^3.535.0",
    "@aws-sdk/lib-dynamodb": "^3.535.0",
    "@jobmatch/shared": "workspace:*",
    "@trpc/server": "^11.0.0-rc.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.5",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/jsonwebtoken": "^9.0.7",
    "jest": "^29.7.0",
    "nock": "^13.4.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.3.3"
  }
}
