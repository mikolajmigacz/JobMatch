{
  "name": "user-service",
  "version": "1.0.0",
  "description": "User profile management service",
  "main": "dist/main.js",
  "scripts": {
    "dev": "ts-node -r tsconfig-paths/register src/main.ts",
    "start": "node dist/main.js",
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns='.*\\.integration\\.spec\\.ts$'",
    "test:watch": "jest --watch",
    "lint": "eslint src/ test/"
  },
  "dependencies": {
    "@jobmatch/shared": "workspace:*",
    "@aws-sdk/client-dynamodb": "^3.926.0",
    "@aws-sdk/lib-dynamodb": "^3.926.0",
    "@trpc/server": "^10.45.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dynamodb-toolbox": "^0.4.1",
    "express": "^4.18.2",
    "joi": "^18.0.1",
    "tsconfig-paths": "^4.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.6",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3"
  }
}
