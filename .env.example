# Environment: development, staging, production
NODE_ENV=development

# API Gateway
API_GATEWAY_PORT=3000

# Services
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
JOB_SERVICE_PORT=3003
APPLICATION_SERVICE_PORT=3004
EMAIL_SERVICE_PORT=3005
CV_ANALYSIS_SERVICE_PORT=3006

# Frontend
SHELL_APP_PORT=4000
JOB_SEEKER_MODULE_PORT=4001
EMPLOYER_MODULE_PORT=4002

# AWS LocalStack
AWS_ENDPOINT=http://localhost:4566
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# DynamoDB
DYNAMODB_ENDPOINT=http://localhost:4566

# SQS
SQS_QUEUE_URL=http://localhost:4566/000000000000/email-queue

# S3
S3_BUCKET=jobmatch-dev
S3_ENDPOINT=http://localhost:4566

# Email (MailHog)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_FROM=noreply@jobmatch.local

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key

# Frontend URLs (for CORS)
FRONTEND_SHELL_URL=http://localhost:4000
FRONTEND_JOB_SEEKER_URL=http://localhost:4001
FRONTEND_EMPLOYER_URL=http://localhost:4002
