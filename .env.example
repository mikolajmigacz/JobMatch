# Environment: development, staging, production
NODE_ENV=development

# API Gateway
API_GATEWAY_PORT=3000

# Services
AUTH_SERVICE_PORT=3001
CORS_ORIGIN=http://localhost:4000,http://localhost:4001,http://localhost:4002
USER_SERVICE_PORT=3002
JOB_SERVICE_PORT=3003
APPLICATION_SERVICE_PORT=3004
EMAIL_SERVICE_PORT=3005
CV_ANALYSIS_SERVICE_PORT=3006

# Frontend
SHELL_APP_PORT=4000
JOB_SEEKER_MODULE_PORT=4001
EMPLOYER_MODULE_PORT=4002

# AWS LocalStack
AWS_ENDPOINT=http://localstack:4566
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
LOCALSTACK_HOSTNAME=localstack

# DynamoDB
DYNAMODB_ENDPOINT=http://localstack:4566

# SQS
SQS_ENDPOINT=http://localstack:4566
SQS_EMAIL_QUEUE_URL=http://localstack:4566/000000000000/email-queue
SQS_EMAIL_QUEUE_NAME=email-queue
SQS_EMAIL_DLQ_URL=http://localstack:4566/000000000000/email-queue-dlq
SQS_EMAIL_DLQ_NAME=email-queue-dlq

# S3
S3_BUCKET=jobmatch-bucket
S3_ENDPOINT=http://localstack:4566
S3_REGION=us-east-1
S3_CV_PREFIX=cv/
S3_LOGO_PREFIX=logos/

# Email (MailHog)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=test
SMTP_PASS=test
SMTP_FROM=noreply@jobmatch.local

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key

# Frontend URLs (for CORS)
FRONTEND_SHELL_URL=http://localhost:4000
FRONTEND_JOB_SEEKER_URL=http://localhost:4001
FRONTEND_EMPLOYER_URL=http://localhost:4002
